@model Library_MVC.Models.LoginModel
@{
	ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
	<div class="form-group row">
		<label asp-for="Email" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="Email" type="email" class="form-control-sm" />
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group row">
		<label asp-for="Password" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="Password" type="password" class="form-control-sm" />
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
	</div>
	<br />
	<div class="form-group">
		<button type="submit" class="btn btn-primary">Login</button>
	</div>
</form>

@section Scripts {
		<partial name="_ValidationScriptsPartial" />
}
