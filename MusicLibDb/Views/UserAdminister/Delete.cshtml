@model Library_MVC.Models.UserModel

@{
	ViewData["Title"] = "Удалить пользователя";
}

<h1>@ViewData["Title"]</h1>

<h3>Вы действительно хотите удалить этого пользователя?</h3>
<hr />
<dl class="row">
	<dt class="col-sm-2">
		Имя пользователя
	</dt>
	<dd class="col-sm-10">
		@Model.UserName
	</dd>
	<dt class="col-sm-2">
		Email
	</dt>
	<dd class="col-sm-10">
		@Model.Email
	</dd>
	<dt class="col-sm-2">
		Имя
	</dt>
	<dd class="col-sm-10">
		@Model.FirstName
	</dd>
	<dt class="col-sm-2">
		Фамилия
	</dt>
	<dd class="col-sm-10">
		@Model.LastName
	</dd>
	<dt class="col-sm-2">
		Номер телефона
	</dt>
	<dd class="col-sm-10">
		@Model.PhoneNumber
	</dd>
</dl>

<form asp-action="Delete" method="post">
	<input type="hidden" asp-for="Id" />
	<div class="form-group">
		<input type="submit" value="Удалить" class="btn btn-danger" />
		<a asp-action="Index" class="btn btn-secondary">Отмена</a>
	</div>
</form>
